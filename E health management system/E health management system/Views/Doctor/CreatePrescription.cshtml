@model BOL.Prescription
@{
    ViewBag.Title = "CreatePrescription";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>Create Prescription</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
<fieldset>
    <h3>@TempData["username"]</h3>
    @TempData["appointmentid"]
    @TempData["firstname"] @TempData["lastname"]
    @TempData["date"]
    @TempData["timeslot"]
    <div class="editor-label">
        @Html.LabelFor(model => model.Pfirstname)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => TempData["firstname"])
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Details)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Details)
        @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
    </div>

    <p>
        <input type="submit" value="Create" />
    </p>
</fieldset>
}
