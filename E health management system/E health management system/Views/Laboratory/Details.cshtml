@model IEnumerable<BOL.Prescription>
@{
    ViewBag.Title = "Details";
}

<!-- Start header -->
<header class="top-navbar">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">
                <img src="" alt="" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbars-rs-food" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbars-rs-food">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active"><a class="nav-link" href="@Url.Action("Index","Laboratory")">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Search","Laboratory")">Search Prescription</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Home")">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<!-- End header -->


<div style="padding:200px 550px">
    <h2>Prescription Details</h2>

    <p><b>Patient Name :</b> @TempData["pfirstname"] @TempData["plastname"] @{TempData.Keep();}</p>
    <table cellpadding="10" border="1" style="font-family:Arial">
        <tr>
            <th>Date</th>
            <th>Doctor Name</th>
            <th>Time Slot</th>
            <th>Prescription Detail</th>
        </tr>
        @foreach (BOL.Prescription prescription in @Model)
        {
            <tr>
                <td>@prescription.Date</td>
                <td>Dr. @prescription.Dfirstname @prescription.Dlastname</td>
                <td>@prescription.Timeslot</td>
                <td>@prescription.Details</td>
            </tr>
        }

    </table>
    <br />
    <input type='button' onclick='history.back();' value='Go Back' />
</div>