@model IEnumerable<BOL.Appointment>
@{
    ViewBag.Title = "History";
}
<!-- Start header -->
<header class="top-navbar">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">
                <img src="" alt="" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbars-rs-food" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbars-rs-food">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active"><a class="nav-link" href="@Url.Action("Index","Patient")">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("SearchDoctor","Patient")">List of Doctors</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdown-a" data-toggle="dropdown">Search</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown-a">
                            <a class="dropdown-item" href="@Url.Action("SearchDoctor","Patient")">Search Doctor</a>
                            <a class="dropdown-item" href="@Url.Action("Index","Patient")">Search Pharmacy</a>
                        </div>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("SearchDoctor","Patient")">Book Appointment</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("History","Patient")">History</a></li>
                    @*<li class="nav-item"><a class="nav-link" href="@Url.Action("Contact","Patient")">Reports</a></li>*@
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Home")">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<!-- End header -->

<div style="padding:200px 550px">
    <h2>History</h2>
    <table cellpadding="10" border="1" style="font-family:Arial">
        <tr>
            <th>Doctor Name</th>
            <th>Date</th>
            <th>Time Slot</th>
            <th>Status</th>
            <th>Prescription Details</th>
        </tr>
        @foreach (BOL.Appointment appointment in @Model)
        {
            <tr>
                <td>Dr. @appointment.Dfirstname @appointment.Dlastname</td>
                <td>@appointment.Date</td>
                <td>@appointment.Timeslot</td>
                <td>@appointment.Status</td>
                <td>@appointment.Details</td>
                <td>
                    @{ 
                        TempData["fdfirstname"] = appointment.Dfirstname;
                        TempData["fdlastname"] = appointment.Dlastname;
                    }
                    @Html.ActionLink("Feedback", "Feedback", "Patient")
                </td>
            </tr>
        }
    </table>
    <br />
    <input type='button' onclick='history.back();' value='Go Back' />

</div>
